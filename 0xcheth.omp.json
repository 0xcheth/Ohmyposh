{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#00BCD4",
          "style": "plain",
          "template": "{{.UserName}}",
          "type": "text"
        },
        {
          "foreground": "#FF8A65",
          "properties": {
            "time_format": "3:04 am"
          },
          "style": "plain",
          "template": " {{.CurrentDate | date .Format }} ",
          "type": "time"
        },
        {
          "foreground": "#FF6347",
          "properties": {
            "style": "folder"
          },
          "style": "plain",
          "template": " <#FFF888>Óóæ</> {{ .Path }}/ ",
          "type": "path"
        },
        {
          "foreground": "#4CAF50",
          "properties": {
            "branch_icon": "",
            "fetch_status": false
          },
          "style": "plain",
          "template": "<#2196F3>git:(</>{{ .HEAD }}<#2196F3>)</>",
          "type": "git"
        },
        {
          "foreground": "#FFC107",
          "properties": {
            "fetch_version": true
          },
          "style": "plain",
          "template": "<#FFFFFF>via</> \ue781 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "type": "node"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [       
        {
          "type": "text",
          "style": "plain",
          "foreground": "#DE3163",
          "template": " {{.Shell}}"
        },
        {
          "foreground": "#ADFF2F",
          "style": "plain", 
          "template": " <#7CFC00>Óâ¶  </>{{round .PhysicalPercentUsed .Precision }}%",
          "properties": {
            "precision": 0
          },
          "type": "sysinfo"
        },
       {
          "foreground": "#00FFFF",
          "style": "plain",
          "template": " <#00BFFF>Ôíº  </>{{round .Load1 .Precision}}%",
          "properties": {
            "precision": 0
          },
          "type": "sysinfo"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        
        {
        "type": "text",
          "style": "plain",
          "foreground": "#FFF0F5",
          "template": " <#cb4335>ü¶ç<#FFFFFF>Û∞ç¶</> $ </>"
         }
        
      ],
      "type": "prompt"
    }
  ],
  "version": 3
}

